<script>
    $(document).ready (function(){
        const lastSession = new Date(localStorage.time)
        var now = new Date();

        var seconds = (now - lastSession)/1000;

        localStorage.time = now;

        document.getElementById("last_session").innerHTML = String(seconds);
        console.log(String(seconds));
    });
</script>
